<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<TextView android:id="@+id/connectionStatus" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="20dp"
		android:text="@string/txtConnectionStatus" android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" />
	
	<Button
        android:id="@+id/connectButton" android:layout_width="150dp"
        android:layout_height="wrap_content" android:layout_below="@+id/connectionStatus"
        android:layout_centerHorizontal="true" android:layout_marginTop="20dp"
        android:onClick="click" android:text="@string/btnConnect"
        android:visibility="visible" />
    	
    <ScrollView android:id="@+id/incomingScrollView" android:layout_width="fill_parent"
    	android:layout_height="fill_parent" android:layout_marginTop="20dp"
    	android:layout_below="@id/connectButton" android:layout_centerHorizontal="true">
    	
        <LinearLayout android:orientation="vertical" android:id="@+id/incomingLayout"
        	android:layout_width="fill_parent" android:layout_height="wrap_content">
        	
            <TextView android:gravity="center_horizontal" android:id="@+id/incomingTitle"
            	android:layout_width="fill_parent" android:layout_height="wrap_content"
            	android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            	android:text="@string/txtIncomingTitle" />
            	
        </LinearLayout>
    </ScrollView>

</RelativeLayout>